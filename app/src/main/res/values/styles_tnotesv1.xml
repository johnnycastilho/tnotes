<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Tnotesv1" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_tnotesv1</item>
        <item name="popupMenuStyle">@style/PopupMenu.Tnotesv1</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tnotesv1</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Tnotesv1</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Tnotesv1</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Tnotesv1</item>
        <item name="actionModeBackground">@drawable/cab_background_top_tnotesv1</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_tnotesv1</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tnotesv1</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Tnotesv1.Widget</item>

    </style>

    <style name="ActionBar.Solid.Tnotesv1" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_tnotesv1</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_tnotesv1</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_tnotesv1</item>
        <item name="progressBarStyle">@style/ProgressBar.Tnotesv1</item>
    </style>

    <style name="ActionBar.Transparent.Tnotesv1" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_tnotesv1</item>
        <item name="progressBarStyle">@style/ProgressBar.Tnotesv1</item>
    </style>

    <style name="PopupMenu.Tnotesv1" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tnotesv1</item>
    </style>

    <style name="DropDownListView.Tnotesv1" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tnotesv1</item>
    </style>

    <style name="ActionBarTabStyle.Tnotesv1" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tnotesv1</item>
    </style>

    <style name="DropDownNav.Tnotesv1" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_tnotesv1</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tnotesv1</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tnotesv1</item>
    </style>

    <style name="ProgressBar.Tnotesv1" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tnotesv1</item>
    </style>

    <style name="ActionButton.CloseMode.Tnotesv1" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tnotesv1</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Tnotesv1.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Tnotesv1</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tnotesv1</item>
    </style>

</resources>